<?xml version="1.0" encoding="utf-8"?>
<j:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:j="library://ns.apache.org/royale/jewel"
    xmlns:js="library://ns.apache.org/royale/basic"
    xmlns:html="library://ns.apache.org/royale/html">

    <fx:Script>
        <![CDATA[

        private function validation():void
        {
            if( username.text == "someuser" && password.text == "somepass")
                currentState = 'loggedIn';
            else
                currentState = 'error';
        }

        ]]>
    </fx:Script>

    <j:beads>
		<js:SimpleStatesImpl/>
		<js:ContainerDataBinding/>
	</j:beads>

    <j:states>
        <js:State name="noinit" />
        <js:State name="init" />
        <js:State name="loggedIn" />
        <js:State name="error" />
    </j:states>

    <j:Card>
        <html:H1 text="Royale login"/>
        <j:TextInput id="username" text="someuser"/>
        <j:TextInput id="password" text="somepass">
            <j:beads>
                <j:PasswordInput/>
            </j:beads>
        </j:TextInput>
        <j:Button text="Login" emphasis="primary" click="validation()" />
    </j:Card>
</j:VGroup>